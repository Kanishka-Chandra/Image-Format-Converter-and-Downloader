{
  "manifest_version": 3,
  "name": "Image Format Converter and Downloader",
  "version": "1.0",
  "description": "Download images in your preferred format directly, with just one click",
  "permissions": ["contextMenus", "downloads", "notifications"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
